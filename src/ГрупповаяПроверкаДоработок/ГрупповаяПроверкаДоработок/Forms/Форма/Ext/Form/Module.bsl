	Статусы = Новый Структура;
	Статусы.Вставить("Ошибка",		"failed");
	Статусы.Вставить("Сломан",		"broken");
	Статусы.Вставить("Пройден",		"passed");
	Статусы.Вставить("Пропущен",	"skipped");
	
	Возврат Статусы;
	
